<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="horizontal"
    android:background="@drawable/dialog_login_check_box"
    android:padding="20dp">

    <TextView
        android:id="@+id/dialog_login_check_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/dialog_login_check_ok_btn"
        android:text="@string/dialog_login_check_text"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:layout_marginTop="30dp"
        android:layout_below="@+id/dialog_login_check_text"
        android:layout_alignParentEnd="true"
        android:background="@drawable/white_to_gray_ripple"
        android:padding="15dp"
        android:id="@+id/dialog_login_check_ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="@string/ok"
        android:textSize="17sp"
        android:textColor="@color/loginBlue"/>
</RelativeLayout>