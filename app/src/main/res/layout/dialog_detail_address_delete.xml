<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="20dp" android:background="@drawable/dialog_login_check_box">
    <TextView
        android:id="@+id/dialog_detail_address_delete_text"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textStyle="bold"
        android:text="이 주소를 삭제하겠습니까?"
        android:textColor="@color/black"/>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/dialog_detail_address_delete_text"
        android:layout_alignParentEnd="true"
        android:background="@drawable/white_to_gray_ripple"
        android:padding="15dp"
        android:id="@+id/dialog_detail_address_delete_yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="삭제"
        android:textSize="15sp"
        android:textColor="@color/blue"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/dialog_detail_address_delete_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_detail_address_delete_text"
        android:layout_toStartOf="@+id/dialog_detail_address_delete_yes"
        android:background="@drawable/white_to_gray_ripple"
        android:padding="15dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:text="@string/delete"
        android:textColor="@color/blue"
        android:textSize="15sp" />
</RelativeLayout>