<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:paddingTop="12dp"
    android:layout_height="wrap_content" android:orientation="vertical" android:background="@drawable/white_to_gray_ripple">

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:paddingHorizontal="10dp"
        android:id="@+id/item_category_super_category_img_back"
        android:layout_width="83dp"
        android:layout_gravity="center"
        android:layout_height="63dp"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_marginTop="2dp"
        android:visibility="visible"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:paddingHorizontal="10dp"
        android:id="@+id/item_category_super_category_img"
        android:layout_width="78dp"
        android:layout_gravity="center"
        android:layout_height="58dp"
        android:scaleType="centerCrop"
        android:src="@drawable/category_girll"/>

    <TextView
        android:layout_below="@+id/item_category_super_category_img_back"
        android:paddingHorizontal="10dp"
        android:layout_marginTop="7dp"
        android:id="@+id/item_category_super_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="신규 맛집"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:layout_below="@+id/item_category_super_category_name"
        android:layout_marginTop="7dp"
        android:layout_width="83dp"
        android:layout_height="3dp">
        <View
            android:layout_alignParentBottom="true"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/line"/>
        <View
            android:visibility="invisible"
            android:id="@+id/item_category_super_category_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/loginBlue"/>

    </RelativeLayout>


</RelativeLayout>