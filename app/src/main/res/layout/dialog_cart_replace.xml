<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="20dp" android:background="@drawable/dialog_login_check_box"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_cart_replace_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="@string/cart_replace_title"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/dialog_cart_replace_text"
        android:layout_marginTop="10sp"
        android:layout_below="@+id/dialog_cart_replace_title"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="@string/cart_replace"
        android:textColor="@color/black"/>

    <TextView
        android:layout_marginTop="25dp"
        android:layout_below="@+id/dialog_cart_replace_text"
        android:layout_alignParentEnd="true"
        android:background="@drawable/white_to_gray_ripple"
        android:padding="10dp"
        android:id="@+id/dialog_cart_change_replace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="대체하기"
        android:textSize="15sp"
        android:textColor="@color/blue"/>

    <TextView
        android:layout_marginTop="25dp"
        android:id="@+id/dialog_cart_change_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_cart_replace_text"
        android:layout_toStartOf="@+id/dialog_cart_change_replace"
        android:background="@drawable/white_to_gray_ripple"
        android:padding="10dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        android:text="취소"
        android:textColor="@color/blue"
        android:textSize="15sp" />

</RelativeLayout>