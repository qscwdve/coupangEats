<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="25dp"
    android:id="@+id/item_coupon_parent"
    android:background="@drawable/round_gray_box"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_coupon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쿠팡이츠 BHC할인쿠폰"
        android:textColor="@color/black"
        android:textSize="13sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/item_coupon_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="5,000원 할인"
            android:textColor="@color/loginBlue"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/item_coupon_select_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:contentDescription="@string/image_no"
            android:src="@drawable/ic_check_blue" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_coupon_min_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="15,000원 이상 주문 시"
            android:textColor="@color/baseColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_coupon_expiration_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06/21 까지"
            android:textColor="@color/baseColor"
            android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>
