<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_recommend_super_item_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_to_gray_ripple"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_recommend_img"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_weight="3"
                android:contentDescription="@string/image_no"
                android:scaleType="centerCrop"
                android:src="@drawable/category_girll" />

            <LinearLayout
                android:id="@+id/item_recommend_img_sub_parent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_recommend_img_sub1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/category_girll"
                    tools:ignore="NestedWeights" />

                <ImageView
                    android:id="@+id/item_recommend_img_sub2"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/category_girll"
                    tools:ignore="NestedWeights" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_recommend_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:maxLength="14"
                    android:text="수원역점베스킨 원역점"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:ignore="NestedWeights" />
                <ImageView
                    android:id="@+id/item_recommend_markIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="17dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="5dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_cheetah" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_recommend_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:text="15-25분"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_recommend_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_star" />

            <TextView
                android:id="@+id/item__recommend_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="5.0(42)"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_recommend_dot1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="3dp"
                android:text="@string/dot"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_recommend_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="0.8km"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_recommend_dot2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="3dp"
                android:text="@string/dot"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/item_recommend_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="배달비 3,000원"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_recommend_coupon_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_login_basic"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp"
            android:paddingVertical="3dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="2sp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_discount_coupon" />

            <TextView
                android:id="@+id/item_recommend_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="5,000원 쿠폰"
                android:textColor="@color/loginBlue"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/item_recommend_super_line"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone" />
</LinearLayout>