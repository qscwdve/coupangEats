<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="15dp"
    android:paddingBottom="15dp"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="wrap_content" android:background="@drawable/white_to_gray_ripple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_recommend_img"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/category_girll"
            android:contentDescription="@string/image_no" />

        <LinearLayout
            android:layout_marginStart="3dp"
            android:id="@+id/item_recommend_img_sub_parent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/item_recommend_img_sub1"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/category_girll"
                tools:ignore="NestedWeights" />

            <ImageView
                android:id="@+id/item_recommend_img_sub2"
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/category_girll"
                tools:ignore="NestedWeights" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:id="@+id/item_recommend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="베스킨 라벤스 수원역점"
            android:ellipsize="end"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:maxLines="1"/>
        
        <ImageView
            android:id="@+id/item_recommend_markIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/new_super"/>

        <TextView
            android:id="@+id/item_recommend_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="15-25분"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:gravity="end"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginVertical="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_recommend_star"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"/>

        <TextView
            android:id="@+id/item__recommend_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0(42)"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/item_recommend_dot1"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dot"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/item_recommend_distance"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.8km"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/item_recommend_dot2"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dot"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:layout_gravity="center"
            android:id="@+id/item_recommend_delivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="배달비 3,000원"
            android:textColor="@color/black"
            android:textSize="13sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_recommend_coupon_parent"
        android:background="@drawable/dialog_login_basic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="3dp"
        android:paddingHorizontal="1dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginStart="2sp"
            android:adjustViewBounds="true"
            android:layout_height="match_parent"
            android:src="@drawable/ic_discount_coupon"/>

        <TextView
            android:id="@+id/item_recommend_coupon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="5"
            android:text="5000원 쿠폰"
            android:textColor="@color/loginBlue"
            android:textSize="11sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>