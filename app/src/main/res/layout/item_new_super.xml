<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="160dp" android:background="@drawable/white_to_gray_ripple"
    android:layout_height="wrap_content" android:orientation="vertical" android:paddingHorizontal="10dp">

    <ImageView
        android:id="@+id/item_new_super_img"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"
        android:src="@drawable/category_girll"
        android:contentDescription="@string/image_no" />

    <TextView
        android:id="@+id/item_new_super_name"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="베스킨 라벤스 수원역점"
        android:ellipsize="end"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:maxLines="1"/>

    <LinearLayout
        android:layout_marginVertical="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_new_super_star"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:adjustViewBounds="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"/>

        <TextView
            android:id="@+id/item_new_super_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.0(42)"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/item_new_super_dot"
            android:layout_gravity="center"
            android:layout_marginHorizontal="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dot"
            android:textColor="@color/black"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/item_new_super_distance"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.8km"
            android:textColor="@color/black"
            android:textSize="13sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_discount_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="배달비 3,000원"
        android:textColor="@color/black"
        android:textSize="13sp"/>
</LinearLayout>