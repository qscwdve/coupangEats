<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="115dp" android:background="@drawable/white_to_gray_ripple"
    android:paddingBottom="10dp" android:layout_height="wrap_content"
    android:orientation="vertical" android:layout_marginHorizontal="10dp">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/item_salse_parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_salse_super_img"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_width="115dp"
            android:adjustViewBounds="true"
            android:layout_height="115dp"
            android:src="@drawable/category_girll"
            android:contentDescription="@string/image_no" />

        <TextView
            android:id="@+id/item_salse_super_name"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="베스킨 라벤스 수원역점"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_salse_super_star"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_super_home_star"/>

            <TextView
                android:id="@+id/item_salse_super_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5.0(42)"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/item_salse_super_dot"
                android:layout_gravity="center"
                android:layout_marginHorizontal="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dot"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/item_salse_super_distance"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.8km"
                android:textColor="@color/black"
                android:textSize="13sp"/>
        </LinearLayout>

        <!-- 할인 쿠폰 -->
        <LinearLayout
            android:layout_marginTop="4dp"
            android:background="@drawable/dialog_login_basic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:paddingHorizontal="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:layout_height="match_parent"
                android:src="@drawable/ic_discount_coupon"/>
            <TextView
                android:id="@+id/item_salse_super_discount"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5000원 쿠폰"
                android:textColor="@color/loginBlue"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/item_salse_end_parent"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/image_no"
                android:scaleType="center"
                android:src="@drawable/home_the_look" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|center_horizontal"
                android:text="더보기"
                android:textColor="@color/black"
                android:textSize="13sp" />
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>