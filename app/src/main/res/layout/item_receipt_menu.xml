<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp">

    <TextView
        android:id="@+id/item_receipt_menu_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마라탕"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_receipt_menu_price"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:gravity="end"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="8,000원"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/item_receipt_menu_side"
        android:layout_marginTop="5dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item_receipt_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소, 숙주추가(+1000원), 문어볼1(+1000원), 소, 숙주추가(+1000원), 문어볼1(+1000원). ㅍ\소, 숙주추가(+1000원), 문어볼1(+1000원)"
        android:textColor="@color/baseColor"
        android:textSize="12sp"
        android:layout_marginEnd="100dp"
        android:visibility="visible"
        tools:ignore="SmallSp" />
</RelativeLayout>