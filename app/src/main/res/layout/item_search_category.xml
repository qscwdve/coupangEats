<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_search_category_parent"
        android:paddingTop="15sp"
        android:background="@drawable/white_to_gray_ripple"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:adjustViewBounds="true"
            android:id="@+id/search_category_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/category_girll"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/item_search_category_new"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/search_category_img"
            android:paddingHorizontal="7dp"
            android:paddingVertical="10dp"
            android:textSize="9sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_category"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/category_circle_new"
            tools:ignore="SmallSp" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/search_category_img"
            android:layout_marginTop="5sp"
            android:id="@+id/search_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="test"/>
    </RelativeLayout>




</LinearLayout>