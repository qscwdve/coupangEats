<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="15dp"
    android:layout_width="wrap_content" android:orientation="horizontal"
    android:background="@drawable/white_to_gray_ripple"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_super_photo_review_parent"
        android:padding="15dp"
        android:background="@drawable/super_photo_review"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_super_photo_review_img"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/category_girll"
            android:contentDescription="@string/image_no" />

        <LinearLayout
            android:layout_marginStart="15dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:id="@+id/item_super_photo_review_content"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:maxLines="2"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:text="너무 맛있어요!"
                android:ellipsize="end"
                tools:ignore="NestedWeights,SmallSp" />

            <LinearLayout
                android:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginEnd="3dp"
                    android:id="@+id/item_super_photo_review_star1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star"/>
                <ImageView
                    android:layout_marginEnd="3dp"
                    android:id="@+id/item_super_photo_review_star2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star"/>
                <ImageView
                    android:layout_marginEnd="3dp"
                    android:id="@+id/item_super_photo_review_star3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star"/>
                <ImageView
                    android:layout_marginEnd="3dp"
                    android:id="@+id/item_super_photo_review_star4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star"/>
                <ImageView
                    android:id="@+id/item_super_photo_review_star5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star_no"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_marginEnd="15dp"
        android:visibility="gone"
        android:background="@drawable/super_photo_review_the_look"
        android:id="@+id/item_super_photo_review_theLook"
        android:paddingHorizontal="20dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="100dp">

        <TextView
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="포토 리뷰\n더보기 ＞"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="13sp"/>
    </RelativeLayout>
    
</LinearLayout>