<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingHorizontal="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp" android:orientation="vertical"
    android:paddingBottom="20dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_filter_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="필터 제목"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="15sp"/>

        <ImageView
            android:adjustViewBounds="true"
            android:id="@+id/dialog_filter_exit"
            android:background="@drawable/circle_ripple_white_to_gray"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:src="@drawable/cancel"
            android:contentDescription="@string/image_no" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/dialog_filter_select"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="15000 이하"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_gravity="center"
        android:id="@+id/dialog_filter_select_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:text="15000 이하"/>

    <LinearLayout
        android:id="@+id/dialog_filter_img_parent"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_filter_selected_5"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <View
            android:id="@+id/dialog_filter_img1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <View
            android:id="@+id/dialog_filter_img2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <View
            android:id="@+id/dialog_filter_img3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <View
            android:id="@+id/dialog_filter_img4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <View
            android:id="@+id/dialog_filter_img5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_filter_value1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5000원"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/dialog_filter_value2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5000원"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/dialog_filter_value3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5000원"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/dialog_filter_value4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5000원"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/dialog_filter_value5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5000원"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_filter_apply"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/dialog_filter_apply"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="17sp"
        android:background="@drawable/box_round_blue_ripple"/>
</LinearLayout>