<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_above="@+id/home_cart_bag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:paddingHorizontal="10sp"
            android:paddingVertical="6sp"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/image_no"
                android:id="@+id/home_gps_img"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitEnd"
                android:adjustViewBounds="true"
                android:padding="14dp"
                android:src="@drawable/ic_home_gps"/>
            <TextView
                android:id="@+id/home_gps_address"
                android:layout_toEndOf="@+id/home_gps_img"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:text="@string/home_address_need"/>

            <ImageView
                android:contentDescription="@string/image_no"
                android:layout_toEndOf="@+id/home_gps_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/main_address_arrow"
                android:adjustViewBounds="true"
                android:padding="15sp"
                tools:ignore="NestedWeights" />

            <ImageView
                android:id="@+id/home_search"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_nav_click_search"
                android:contentDescription="@string/image_no" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7sp"
            android:background="@color/lightGray"
            tools:ignore="SmallSp" />

        <androidx.core.widget.NestedScrollView
            android:visibility="gone"
            android:id="@+id/home_no_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_no_address_title"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="20dp"/>
                <TextView
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_no_address_content"
                    android:textColor="@color/baseColor"
                    android:textSize="17sp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_no_address_recyclerview"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/home_real_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/home_event_banner_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/baseColor"
                        tools:ignore="NestedWeights" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:paddingVertical="10dp"
                        android:paddingHorizontal="20dp"
                        android:id="@+id/home_category_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1sp"
                        android:background="@color/line"
                        tools:ignore="SmallSp" />

                    <!-- 할인중인 맛집 -->
                    <LinearLayout
                        android:layout_marginVertical="10dp"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:id="@+id/home_discount_super"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:paddingStart="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            tools:ignore="RtlSymmetry">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="8"
                                android:layout_height="wrap_content"
                                android:text="@string/discount_super"
                                android:textSize="17sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <ImageView
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_arrow_pointing_to_right"
                                android:contentDescription="@string/image_no" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:paddingVertical="10dp"
                            android:paddingHorizontal="2dp"
                            android:id="@+id/home_discount_super_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/home_cart_bag"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카트에 담기"
        android:textSize="20dp"/>
</RelativeLayout>