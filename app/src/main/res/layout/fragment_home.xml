<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/white">

    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_above="@+id/home_cart_bag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:paddingHorizontal="10sp"
            android:paddingVertical="6sp"
            android:orientation="horizontal">

            <ImageView
                android:contentDescription="@string/image_no"
                android:id="@+id/home_gps_img"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="fitEnd"
                android:adjustViewBounds="true"
                android:padding="14dp"
                android:src="@drawable/ic_delivery_gps"/>
            <TextView
                android:id="@+id/home_gps_address"
                android:layout_toEndOf="@+id/home_gps_img"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:maxWidth="200dp"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:text="@string/home_address_need"/>

            <ImageView
                android:contentDescription="@string/image_no"
                android:layout_toEndOf="@+id/home_gps_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/main_address_arrow"
                android:adjustViewBounds="true"
                android:padding="10sp"
                tools:ignore="NestedWeights" />

            <ImageView
                android:id="@+id/home_search"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_nav_click_search"
                android:contentDescription="@string/image_no" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7sp"
            android:background="@color/lightGray"
            tools:ignore="SmallSp" />

        <androidx.core.widget.NestedScrollView
            android:visibility="gone"
            android:id="@+id/home_no_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_no_address_title"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="20dp"/>
                <TextView
                    android:layout_margin="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_no_address_content"
                    android:textColor="@color/baseColor"
                    android:textSize="17sp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_no_address_recyclerview"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/home_real_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/home_event_banner_viewpager"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/baseColor"
                            tools:ignore="NestedWeights" />

                        <LinearLayout
                            android:layout_margin="10dp"
                            android:paddingVertical="5dp"
                            android:paddingHorizontal="9dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/event_box"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/home_event_page_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1"
                                android:textStyle="bold"
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                tools:ignore="SmallSp" />

                            <TextView
                                android:id="@+id/home_event_page_num_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/ 14"
                                android:textSize="10sp"
                                android:textColor="@color/white"
                                tools:ignore="SmallSp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_margin="10dp"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:background="@drawable/event_box"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="5dp"
                                android:textStyle="bold"
                                android:text="@string/event_total"
                                android:textColor="@color/white"
                                android:textSize="12sp"
                                tools:ignore="SmallSp" />
                        </LinearLayout>

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/home_category_recyclerview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="5dp" />

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1sp"
                        android:background="@color/line"
                        tools:ignore="SmallSp" />

                    <!-- 할인중인 맛집 -->
                    <LinearLayout
                        android:layout_marginVertical="10dp"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:id="@+id/home_discount_super"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_marginBottom="5dp"
                            android:paddingStart="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            tools:ignore="RtlSymmetry">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="10"
                                android:layout_height="wrap_content"
                                android:text="@string/discount_super"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <ImageView
                                android:id="@+id/home_discount_super_look"
                                android:background="@drawable/white_to_gray_ripple"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:paddingHorizontal="5dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_arrow_pointing_to_right"
                                android:contentDescription="@string/image_no" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:paddingTop="10dp"
                            android:id="@+id/home_discount_super_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/line"/>

                    <!-- 새로 들어온 맛집 -->
                    <LinearLayout
                        android:layout_marginVertical="10dp"
                        android:orientation="vertical"
                        android:padding="15dp"
                        android:id="@+id/home_new_super"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:paddingStart="15dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            tools:ignore="RtlSymmetry">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="10"
                                android:layout_height="wrap_content"
                                android:text="@string/new_super"
                                android:textSize="18sp"
                                android:textColor="@color/black"
                                android:textStyle="bold"/>

                            <ImageView
                                android:id="@+id/home_new_super_look"
                                android:background="@drawable/white_to_gray_ripple"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:paddingHorizontal="5dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_arrow_pointing_to_right"
                                android:contentDescription="@string/image_no" />
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:paddingVertical="10dp"
                            android:id="@+id/home_new_super_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/line"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/first_order_event"
                        android:contentDescription="@string/image_no" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:background="@color/line"/>

                    <!-- 주변 맛집 -->
                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="vertical"
                        android:id="@+id/home_recommend_super"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginStart="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="주변 맛집 발견"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"/>

                        <!-- 필터 -->
                        <HorizontalScrollView
                            android:layout_marginTop="3dp"
                            android:scrollbars="none"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <!-- 초기화 -->
                                <LinearLayout
                                    android:visibility="gone"
                                    android:layout_marginVertical="5dp"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="15dp"
                                    android:id="@+id/home_filter_clear"
                                    android:background="@drawable/white_to_gray_ripple"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:id="@+id/home_filter_clear_background"
                                        android:paddingVertical="5dp"
                                        android:paddingHorizontal="10dp"
                                        android:background="@drawable/super_filter_no_click"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/home_filter_clear_img"
                                            android:padding="2dp"
                                            android:adjustViewBounds="true"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_filter_clear"/>

                                        <TextView
                                            android:id="@+id/home_filter_clear_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/filter_clear"
                                            android:layout_marginEnd="3dp"
                                            android:textSize="13sp"
                                            android:textColor="@color/black"/>
                                        <TextView
                                            android:textStyle="bold"
                                            android:id="@+id/home_filter_clear_num"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="1"
                                            android:layout_marginEnd="3dp"
                                            android:textSize="13sp"
                                            android:textColor="@color/loginBlue"/>
                                    </LinearLayout>

                                </LinearLayout>

                                <!-- 추천순 -->
                                <LinearLayout
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginEnd="5dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_gravity="center"
                                    android:id="@+id/home_filter_recommend"
                                    android:background="@drawable/white_to_gray_ripple"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <LinearLayout
                                        android:id="@+id/home_filter_recommend_background"
                                        android:paddingVertical="5dp"
                                        android:paddingHorizontal="10dp"
                                        android:background="@drawable/super_filter_no_click"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/home_filter_recommend_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/filter_super_recommend"
                                            android:layout_marginEnd="3dp"
                                            android:textSize="13sp"
                                            android:textColor="@color/black"/>

                                        <ImageView
                                            android:id="@+id/home_filter_recommend_img"
                                            android:padding="2dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_arrow_down"/>
                                    </LinearLayout>

                                </LinearLayout>

                                <!-- 치타배달 -->
                                <LinearLayout
                                    android:layout_gravity="center"
                                    android:id="@+id/home_filter_cheetah"
                                    android:background="@drawable/white_to_gray_ripple"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:id="@+id/home_filter_cheetah_background"
                                        android:paddingVertical="5dp"
                                        android:paddingHorizontal="10dp"
                                        android:background="@drawable/super_filter_no_click"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/home_filter_cheetah_img"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/main_cheetah"/>

                                        <TextView
                                            android:id="@+id/home_filter_cheetah_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/filter_super_cheetah"
                                            android:layout_marginEnd="3dp"
                                            android:textSize="13sp"
                                            android:textColor="@color/black"/>

                                    </LinearLayout>
                                </LinearLayout>

                                <!-- 배달비 -->
                                <LinearLayout
                                    android:id="@+id/home_filter_delivery_price"
                                    android:background="@drawable/white_to_gray_ripple"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:id="@+id/home_filter_delivery_price_background"
                                        android:paddingVertical="5dp"
                                        android:paddingHorizontal="10dp"
                                        android:background="@drawable/super_filter_no_click"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/home_filter_delivery_price_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/filter_super_delivery_price"
                                            android:layout_marginEnd="3dp"
                                            android:textSize="13sp"
                                            android:textColor="@color/black"/>

                                        <ImageView
                                            android:id="@+id/home_filter_delivery_price_img"
                                            android:padding="2dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_arrow_down"/>
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- 최소 주문 -->
                                <LinearLayout
                                    android:id="@+id/home_filter_mini_order"
                                    android:background="@drawable/white_to_gray_ripple"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:id="@+id/home_filter_mini_order_background"
                                        android:paddingVertical="5dp"
                                        android:paddingHorizontal="10dp"
                                        android:background="@drawable/super_filter_no_click"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/home_filter_mini_order_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/filter_super_min_order"
                                            android:layout_marginEnd="3dp"
                                            android:textSize="13sp"
                                            android:textColor="@color/black"/>

                                        <ImageView
                                            android:id="@+id/home_filter_mini_order_img"
                                            android:padding="2dp"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:src="@drawable/ic_arrow_down"/>
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- 할인 쿠폰 -->
                                <LinearLayout
                                    android:id="@+id/home_filter_coupon"
                                    android:background="@drawable/white_to_gray_ripple"
                                    android:layout_marginVertical="10dp"
                                    android:layout_marginHorizontal="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:id="@+id/home_filter_coupon_background"
                                        android:paddingVertical="5dp"
                                        android:paddingHorizontal="10dp"
                                        android:background="@drawable/super_filter_no_click"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/home_filter_coupon_text"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/filter_supper_coupon"
                                            android:layout_marginEnd="3dp"
                                            android:textSize="13sp"
                                            android:textColor="@color/black"/>

                                    </LinearLayout>
                                </LinearLayout>

                            </LinearLayout>

                        </HorizontalScrollView>

                        <androidx.recyclerview.widget.RecyclerView
                            android:paddingVertical="10dp"
                            android:id="@+id/home__recommend_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:visibility="gone"
        android:id="@+id/home_cart_bag"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카트에 담기"
        android:textSize="20sp"/>
</RelativeLayout>