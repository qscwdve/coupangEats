<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:paddingHorizontal="10sp"
        android:paddingVertical="6sp"
        android:orientation="horizontal">

        <ImageView
            android:contentDescription="@string/image_no"
            android:id="@+id/home_gps_img"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:padding="14dp"
            android:src="@drawable/ic_home_gps"/>
        <TextView
            android:id="@+id/home_gps_address"
            android:layout_toEndOf="@+id/home_gps_img"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:text="@string/home_address_need"/>

        <ImageView
            android:contentDescription="@string/image_no"
            android:layout_toEndOf="@+id/home_gps_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/main_address_arrow"
            android:adjustViewBounds="true"
            android:padding="15sp"
            tools:ignore="NestedWeights" />

        <ImageView
            android:id="@+id/home_search"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_nav_click_search"
            android:contentDescription="@string/image_no" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7sp"
        android:background="@color/lightGray"
        tools:ignore="SmallSp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/home_event_banner_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/baseColor"
                    tools:ignore="NestedWeights" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_category_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</LinearLayout>