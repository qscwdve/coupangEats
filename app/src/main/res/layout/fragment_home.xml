<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="10sp"
        android:paddingVertical="6sp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/main_gps"
            android:layout_marginEnd="10sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:ellipsize="end"
            android:text="집을 가지고 싶은 자여"/>

        <ImageView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/main_address_arrow"
            android:adjustViewBounds="true"
            android:padding="15sp"
            android:scaleType="fitStart"
            tools:ignore="NestedWeights" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10sp"
            android:adjustViewBounds="true"
            android:src="@drawable/nav_click_search"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7sp"
        android:background="@color/baseColor"
        tools:ignore="SmallSp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:orientation="vertical">


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/home_event_banner_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/baseColor"
                    tools:ignore="NestedWeights" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/home_category_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</LinearLayout>