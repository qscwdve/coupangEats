<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:background="@color/white"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context=".src.superSearch.SuperSearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/super_search_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/circle_ripple_white_to_gray"
            android:contentDescription="@string/image_no"
            android:padding="18sp"
            android:src="@drawable/left_arrow"
            android:visibility="visible" />

        <TextView
            android:gravity="start|center_vertical"
            android:id="@+id/super_search_title"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:text="새로 들어왔어요"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="fitEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@drawable/ic_nav_click_search"/>
    </LinearLayout>

    <!-- 필터 -->
    <HorizontalScrollView
        android:layout_marginStart="7dp"
        android:layout_marginTop="3dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 추천순 -->
            <LinearLayout
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:id="@+id/search_filter_recommend"
                android:background="@drawable/white_to_gray_ripple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/search_filter_recommend_background"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/super_filter_no_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/search_filter_recommend_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_super_recommend"
                        android:layout_marginEnd="3dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:padding="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_down"/>
                </LinearLayout>

            </LinearLayout>

            <!-- 치타배달 -->
            <LinearLayout
                android:id="@+id/search_filter_cheetah"
                android:background="@drawable/white_to_gray_ripple"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/search_filter_cheetah_background"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/super_filter_no_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/cheetah_only"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_super_cheetah"
                        android:layout_marginEnd="3dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

                </LinearLayout>
            </LinearLayout>

            <!-- 배달비 -->
            <LinearLayout
                android:id="@+id/search_filter_delivery_price"
                android:background="@drawable/white_to_gray_ripple"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/search_filter_delivery_price_background"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/super_filter_no_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/search_filter_delivery_price_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_super_delivery_price"
                        android:layout_marginEnd="3dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:padding="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_down"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 최소 주문 -->
            <LinearLayout
                android:id="@+id/search_filter_mini_order"
                android:background="@drawable/white_to_gray_ripple"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/search_filter_mini_order_background"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/super_filter_no_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/search_filter_mini_order_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_super_min_order"
                        android:layout_marginEnd="3dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:padding="2dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow_down"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 할인 쿠폰 -->
            <LinearLayout
                android:id="@+id/search_filter_coupon"
                android:background="@drawable/white_to_gray_ripple"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/search_filter_coupon_background"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/super_filter_no_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/filter_supper_coupon"
                        android:layout_marginEnd="3dp"
                        android:textSize="15sp"
                        android:textColor="@color/black"/>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
    <androidx.recyclerview.widget.RecyclerView
        android:paddingVertical="10dp"
        android:id="@+id/search_recommend_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>