<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/white_to_gray_ripple"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_detail_super_menu_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="13dp"
        android:paddingStart="20dp"
        android:text="메뉴 이름"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_alignBottom="@+id/item_detail_super_menu_category_highlight"
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/lightGray"
            android:visibility="visible"
            tools:ignore="SmallSp" />
        <View
            android:layout_alignParentTop="true"
            android:id="@+id/item_detail_super_menu_category_highlight"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginHorizontal="7dp"
            android:background="@color/black"
            android:visibility="visible" />
    </RelativeLayout>


</LinearLayout>