<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.menuSelect.MenuSelectActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/menu_select_img_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/category_girll"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:paddingHorizontal="13dp"
                    android:paddingVertical="3dp"
                    android:background="@drawable/event_box"
                    app:layout_constraintBottom_toBottomOf="@+id/menu_select_img_viewPager"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/menu_select_img_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/menu_select_img_num_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" / 14"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        tools:ignore="SmallSp" />

                    <View
                        android:layout_marginHorizontal="3dp"
                        android:layout_width="1sp"
                        android:layout_height="match_parent"
                        android:background="@color/baseColor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체보기"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        tools:ignore="SmallSp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:orientation="horizontal"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="7dp"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/super_search_back"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:padding="10dp"
                        android:background="@drawable/circle_ripple_white_to_gray"
                        android:contentDescription="@string/image_no"
                        android:src="@drawable/ic_left_arrow_white"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/detail_super_title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:text="새로 들어왔어요"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:padding="10dp"
                        android:src="@drawable/ic_share_white" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/menu_select_menu_name"
                android:layout_marginTop="25sp"
                android:layout_marginStart="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="면을 품은 활금찜닭 한마리"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/menu_select_menu_introduce"
                android:layout_marginBottom="10sp"
                android:layout_marginTop="10sp"
                android:layout_marginStart="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="찜닭+공기1+쫄면+계란찜+생수500ml"
                android:textColor="@color/baseColor"/>

            <View
                android:layout_marginVertical="10sp"
                android:layout_marginHorizontal="20sp"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/line"
                tools:ignore="SmallSp" />
            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginStart="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="가격"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/menu_select_menu_price"
                    android:layout_marginStart="20sp"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="48,000원"
                    android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="10sp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginStart="20sp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="수량"
                    android:textColor="@color/black"/>
                <RelativeLayout
                    android:id="@+id/menu_select_num_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_circle">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="-"
                        android:layout_centerInParent="true"
                        android:textColor="@color/baseColor"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/menu_select_num"
                    android:layout_marginHorizontal="10dp"
                    android:layout_width="wrap_content"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:text="1"
                    android:textColor="@color/black"/>
                <RelativeLayout
                    android:id="@+id/menu_select_num_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_circle">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:textColor="@color/baseColor"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/menu_select_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <TextView
        android:id="@+id/menu_select_complete"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="카트에 담기"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/loginBlue"/>

</RelativeLayout>