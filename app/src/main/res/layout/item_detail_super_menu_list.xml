<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/item_detail_super_menu_list_parent"
        android:background="@drawable/white_to_gray_ripple"
        android:paddingVertical="15dp"
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:layout_marginBottom="5dp"
                android:id="@+id/item_menu_list_recomm_parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_menu_list_recomm_order"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/super_menu_recomm_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/super_recomm_many_orer"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="3dp"
                    android:textColor="@color/loginBlue"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
                <TextView
                    android:id="@+id/item_menu_list_recomm_review"
                    android:background="@drawable/super_menu_recomm_box"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/super_recomm_many_review"
                    android:paddingHorizontal="5dp"
                    android:paddingVertical="3dp"
                    android:textColor="@color/loginBlue"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    tools:ignore="SmallSp" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_menu_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메뉴 이름"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/item_menu_list_price"
                android:layout_marginVertical="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12,000 원"
                android:textSize="17sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/item_menu_list_introduce"
                android:layout_marginEnd="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:text="메뉴 소개글이다."
                android:textColor="@color/baseColor"
                android:textSize="15sp"
                android:layout_marginTop="5sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_menu_list_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/category_girll"/>


    </LinearLayout>
    <View
        android:layout_marginHorizontal="15dp"
        android:id="@+id/item_menu_list_line"
        android:layout_width="match_parent"
        android:layout_height="1.5sp"
        android:background="@color/line"
        tools:ignore="SmallSp" />

</LinearLayout>