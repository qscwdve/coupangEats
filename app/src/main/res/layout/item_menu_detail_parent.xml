<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:orientation="vertical"
    android:layout_height="wrap_content" android:id="@+id/item_menu_detail_parent_item_parent">
    <LinearLayout
        android:background="@color/line"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:id="@+id/item_menu_detail_parent_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="기본"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/item_menu_detail_necessary_back"
            android:paddingHorizontal="6dp"
            android:paddingVertical="2dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/white_null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_menu_detail_parent_nessary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/necessaryCheck"
                android:textColor="@color/pink"
                android:textSize="13sp"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_menu_detail_parent_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>